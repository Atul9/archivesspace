<%= render_aspace_partial :partial => "shared/flash_messages" %>

<% if @search_data['results'].length %>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th><%= I18n.t("custom_report_template._singular") %></th>
				<th><%= I18n.t("custom_report_template.description") %></th>
				<% if user_can? 'manage_repository' %>
					<th width="70px"><!-- actions --></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% @search_data['results'].each do |template| %>
				<tr>
					<td><%= template.name %></td>
					<td><%= template.description %></td>
					<% if user_can? 'manage_repository' %>
						<td>
							<div class="btn-group" style="float: right">
								<div class="btn btn-xs">
									<%= button_delete_action url_for(:controller => :custom_report_templates, :action => :delete, :id => template.id ), { :"data-title" => I18n.t("actions.delete_confirm_title", :title => template.name) } unless template.id.nil? %>
								</div>
							</div>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= render_aspace_partial :partial => "shared/pagination" %>
<% else %>
	<p class="alert alert-info">
		No Custom Report Templates.
	</p>
<% end %>