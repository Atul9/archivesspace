<%= setup_context :type => :custom_report_template, :title => I18n.t('custom_report_template._frontend.new_title') %>

<%= form_for @custom_report_template, :as => "custom_report_template", :url => {:action => :create}, :html => {:class => 'form-horizontal aspace-record-form public-form'} do |f| %>

	<div class="row">
		<div class="col-md-12">
			<div class="record-pane">
				<% if session['custom_report_template'] %><%= link_to_help :topic => "custom_report_template" %><% end %>
				<h2><%= I18n.t("actions.new_prefix") %> <%= I18n.t("custom_report_template._singular") %></h2>
				<%= form_context :custom_report_template, @custom_report_template do |form| %>
					<%= render_aspace_partial :partial => "custom_report_templates/form", :locals => {:form => form} %>

					<div class="form-actions">
						<button id="create_template" type="submit" class="btn btn-primary"><%= I18n.t("custom_report_template._frontend.action.save") %></button>
						<%= link_to I18n.t("actions.cancel"), {:controller => :welcome}, :class => "btn btn-cancel btn-default" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
